{namespace DDMNumeric}

/**
 * Defines the delegated template for the numeric field.
 */
{deltemplate ddm.field variant="'numeric'"}
	{call .render data="all" /}
{/deltemplate}

/**
 * Prints the DDM form numeric field.
 */
{template .render}
	{@param name: string}
	{@param pathThemeImages: string}
	{@param placeholder: string}
	{@param readOnly: bool}
	{@param showLabel: bool}
	{@param value: any}
	{@param visible: bool}
	{@param? dir: string}
	{@param? label: string}
	{@param? predefinedValue: any}
	{@param? required: bool}
	{@param? tip: string}
	{@param? tooltip: string}

	{let $displayValue: $value ? $value : $predefinedValue ? $predefinedValue : '' /}

	<div class="form-group{$visible ? '' : ' hide'} liferay-ddm-form-field-numeric {$tip ? 'liferay-ddm-form-field-has-tip' : ''}" data-fieldname="{$name}">
		<label for="{$name}">
			{if $showLabel}
				{$label}{sp}
			{/if}

			{if $required}
				<svg aria-hidden="true" class="lexicon-icon lexicon-icon-asterisk reference-mark">
					<use xlink:href="{$pathThemeImages}/lexicon/icons.svg#asterisk" />
				</svg>
			{/if}
		</label>

		{if $showLabel}
			{if $tip}
				<span class="form-text">{$tip}</span>
			{/if}
		{/if}

		<div class="input-group input-group-container {if $tooltip}input-group-default{/if}">
			<div class="input-group-item">
				<input class="field form-control"
				{if $dir}dir="{$dir}"{/if}
				{if $readOnly}disabled{/if}
				id="{$name}" name="{$name}"
				placeholder="{$placeholder}"
				type="text"
				value="{$displayValue}">
			</div>
			{if $tooltip}
				<div class="input-group-item input-group-item-shrink">
					<button class="btn btn-monospaced btn-unstyled trigger-tooltip"
							data-original-title="{$tooltip}"
							data-toggle="popover"
							title="{$tooltip}" type="button">
						<span class="help-icon rounded-circle sticker sticker-secondary">
							<span class="icon-question"></span>
						</span>
					</button>
				</div>
			{/if}
		</div>
	</div>
{/template}
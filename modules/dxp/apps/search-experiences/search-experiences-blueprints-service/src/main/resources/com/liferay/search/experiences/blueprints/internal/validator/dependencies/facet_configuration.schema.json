{
	"$id": "facet_configuration.schema.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"additionalProperties": {
		"$ref": "#/definitions/facets"
	},
	"definitions": {
		"facet": {
			"properties": {
				"aggregation_name": {
					"type": "string"
				},
				"enabled": {
					"type": "boolean"
				},
				"exclude_values": {
					"type": "array"
				},
				"field": {
					"type": "string"
				},
				"filter_mode": {
					"enum": [
						"post",
						"pre"
					],
					"type": "string"
				},
				"include_values": {
					"type": "array"
				},
				"label": {
					"type": "string"
				},
				"min_doc_count": {
					"minimum": 0,
					"type": "number"
				},
				"multi_value": {
					"type": "boolean"
				},
				"multi_value_operator": {
					"enum": [
						"and",
						"or"
					],
					"type": "string"
				},
				"parameter_name": {
					"type": "string"
				},
				"shard_size": {
					"minimum": 1,
					"type": "number"
				},
				"size": {
					"minimum": 1,
					"type": "number"
				}
			},
			"required": [
				"field"
			],
			"type": "object"
		},
		"facets": {
			"properties": {
				"category": {
					"allOf": [
						{
							"$ref": "#/definitions/facet"
						}
					],
					"properties": {
						"field": {
							"const": "assetCategoryIds"
						}
					}
				},
				"category_tree": {
					"allOf": [
						{
							"$ref": "#/definitions/facet"
						}
					],
					"properties": {
						"field": {
							"const": "assetCategoryIds"
						},
						"parameters": {
							"properties": {
								"root_vocabulary_id": {
									"minimum": 1,
									"type": "number"
								}
							},
							"required": [
								"root_vocabulary_id"
							],
							"type": "object"
						}
					},
					"required": [
						"parameters"
					]
				},
				"date_range": {
					"allOf": [
						{
							"$ref": "#/definitions/facet"
						}
					],
					"properties": {
						"date_format": {
							"type": "string"
						},
						"parameters": {
							"properties": {
								"ranges": {
									"items": {
										"properties": {
											"from": {
												"type": "string"
											},
											"label": {
												"type": "string"
											},
											"to": {
												"type": "string"
											}
										},
										"required": [
											"from",
											"label",
											"to"
										]
									},
									"minItems": 1,
									"type": "array"
								}
							},
							"required": [
								"date_format",
								"ranges"
							],
							"type": "object"
						}
					},
					"required": [
						"parameters"
					]
				},
				"ddm_structure_name": {
					"allOf": [
						{
							"$ref": "#/definitions/facet"
						}
					],
					"properties": {
						"field": {
							"const": "ddmStructureKey"
						}
					}
				},
				"document_type": {
					"allOf": [
						{
							"$ref": "#/definitions/facet"
						}
					],
					"properties": {
						"field": {
							"const": "fileEntryTypeId"
						}
					}
				},
				"folder": {
					"allOf": [
						{
							"$ref": "#/definitions/facet"
						}
					],
					"properties": {
						"field": {
							"const": "folderId"
						}
					}
				},
				"site": {
					"allOf": [
						{
							"$ref": "#/definitions/facet"
						}
					],
					"properties": {
						"field": {
							"const": "scopeGroupId"
						}
					}
				},
				"term_map": {
					"allOf": [
						{
							"$ref": "#/definitions/facet"
						}
					],
					"properties": {
						"parameters": {
							"properties": {
								"map": {
									"items": {
										"properties": {
											"key": {
												"type": "string"
											},
											"values": {
												"minItems": 1,
												"type": "array"
											}
										},
										"required": [
											"key",
											"values"
										]
									},
									"minItems": 1,
									"type": "array"
								}
							},
							"required": [
								"map"
							],
							"type": "object"
						}
					},
					"required": [
						"parameters"
					]
				},
				"terms": {
					"$ref": "#/definitions/facet"
				}
			},
			"type": "object"
		}
	},
	"description": "Schema for Blueprints facets",
	"title": "Blueprint Facets",
	"type": "object"
}
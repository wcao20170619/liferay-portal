{
	"$id": "ui_configuration.schema.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"description": "Schema for Element UI Configuration",
	"definitions": {
		"field": {
			"allOf": [
				{
					"if": {
						"properties": {
							"type": {
								"const": "date"
							}
						}
					},
					"then": {
						"$ref": "#/definitions/fieldDate"
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"const": "fieldMapping"
							}
						}
					},
					"then": {
						"$ref": "#/definitions/fieldFieldMapping"
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"const": "fieldMappingList"
							}
						}
					},
					"then": {
						"$ref": "#/definitions/fieldFieldMappingList"
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"const": "itemSelector"
							}
						}
					},
					"then": {
						"$ref": "#/definitions/fieldItemSelector"
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"const": "json"
							}
						}
					},
					"then": {
						"$ref": "#/definitions/fieldJSON"
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"const": "multiselect"
							}
						}
					},
					"then": {
						"$ref": "#/definitions/fieldMultiselect"
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"const": "select"
							}
						}
					},
					"then": {
						"$ref": "#/definitions/fieldSelect"
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"const": "slider"
							}
						}
					},
					"then": {
						"$ref": "#/definitions/fieldSlider"
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"const": "text"
							}
						}
					},
					"then": {
						"$ref": "#/definitions/fieldText"
					}
				}
			],
			"properties": {
				"helpText": {
					"type": "string"
				},
				"label": {
					"type": "string"
				},
				"name": {
					"type": "string"
				},
				"type": {
					"enum": [
						"date",
						"fieldMapping",
						"fieldMappingList",
						"itemSelector",
						"json",
						"multiselect",
						"number",
						"select",
						"slider",
						"text"
					],
					"type": "string"
				},
				"typeOptions": {
					"properties": {
						"nullable": {
							"type": "boolean"
						},
						"required": {
							"type": "boolean"
						}
					}
				}
			},
			"required": ["label", "type"]
		},
		"fieldDate": {
			"properties": {
				"defaultValue": {
					"anyOf": [
						{
							"type": "number"
						},
						{
							"type": "string"
						}
					]
				},
				"typeOptions": {
					"properties": {
						"format": {
							"anyOf": [
								{
									"type": "number"
								},
								{
									"type": "string"
								}
							]
						}
					},
					"type": "object"
				}
			}
		},
		"fieldFieldMapping": {
			"properties": {
				"defaultValue": {
					"$ref": "#/definitions/fieldMappingItem"
				},
				"typeOptions": {
					"properties": {
						"boost": {
							"type": "boolean"
						}
					},
					"type": "object"
				}
			}
		},
		"fieldFieldMappingList": {
			"properties": {
				"defaultValue": {
					"items": {
						"$ref": "#/definitions/fieldMappingItem"
					},
					"type": "array"
				},
				"typeOptions": {
					"properties": {
						"boost": {
							"type": "boolean"
						}
					},
					"type": "object"
				}
			}
		},
		"fieldItemSelector": {
			"properties": {
				"defaultValue": {
					"items": {
						"properties": {
							"label": {
								"type": "string"
							},
							"value": {
								"type": "string"
							}
						},
						"type": "object"
					},
					"type": "array"
				},
				"typeOptions": {
					"properties": {
						"itemType": {
							"type": "string"
						}
					},
					"type": "object"
				}
			}
		},
		"fieldJSON": {
			"properties": {
				"defaultValue": {
					"type": "object"
				}
			}
		},
		"fieldMultiselect": {
			"properties": {
				"defaultValue": {
					"items": {
						"properties": {
							"label": {
								"type": "string"
							},
							"value": {
								"type": "string"
							}
						},
						"type": "object"
					},
					"type": "array"
				}
			}
		},
		"fieldSelect": {
			"properties": {
				"defaultValue": {
					"type": "string"
				},
				"typeOptions": {
					"properties": {
						"options": {
							"items": {
								"properties": {
									"label": {
										"type": "string"
									},
									"value": {
										"type": "string"
									}
								}
							},
							"type": "array"
						}
					},
					"required": ["options"]
				}
			}
		},
		"fieldSlider": {
			"properties": {
				"defaultValue": {
					"type": "number"
				}
			}
		},
		"fieldText": {
			"properties": {
				"defaultValue": {
					"type": "string"
				}
			}
		},
		"fieldMappingItem": {
			"additionalProperties": false,
			"properties": {
				"boost": {
					"anyOf": [
						{
							"type": "number"
						},
						{
							"type": "string"
						}
					]
				},
				"field": {
					"type": "string"
				},
				"languageIdPosition": {
					"type": "number"
				},
				"locale": {
					"type": "string"
				}
			},
			"required": ["field"],
			"type": "object"
		},
		"fieldSet": {
			"properties": {
				"fields": {
					"items": {
						"$ref": "#/definitions/field"
					},
					"type": "array"
				}
			}
		}
	},
	"properties": {
		"fieldSets": {
			"items": {
				"$ref": "#/definitions/fieldSet"
			},
			"type": "array"
		}
	},
	"required": [],
	"title": "Element UI Configuration",
	"type": "object"
}
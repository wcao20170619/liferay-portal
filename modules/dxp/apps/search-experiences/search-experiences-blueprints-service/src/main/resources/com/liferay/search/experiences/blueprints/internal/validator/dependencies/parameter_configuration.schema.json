{
  "$id": "parameter_configuration.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "customParameter": {
      "if": {
        "properties": {
          "type": {
            "const": "date"
          }
        }
      },
      "then": {
        "properties": {
          "date_format": {
            "type": "string"
          }
        },
        "required": [
          "date_format"
        ]
      },
      "properties": {
        "default": {
          "type": [
            "number",
            "string"
          ]
        },
        "max_value": {
          "type": "number"
        },
        "min_value": {
          "type": "number"
        },
        "parameter_name": {
          "type": "string"
        },
        "type": {
          "enum": [
            "boolean",
            "date",
            "double",
            "float",
            "integer",
            "integer_array",
            "long",
            "long_array",
            "string",
            "string_array"
          ],
          "type": "string"
        }
      },
      "required": [
        "parameter_name",
        "type"
      ],
      "type": "object"
    },
    "parameter": {
      "properties": {
        "parameter_name": {
          "type": "string"
        }
      },
      "required": [
        "parameter_name"
      ],
      "type": "object"
    }
  },
  "description": "Blueprint parameters schema",
  "properties": {
    "custom": {
      "items": {
        "$ref": "#/definitions/customParameter"
      },
      "type": "array"
    },
    "keywords": {
      "$ref": "#/definitions/parameter"
    },
    "page": {
      "$ref": "#/definitions/parameter"
    },
    "size": {
      "allOf": [
        {
          "$ref": "#/definitions/parameter"
        }
      ],
      "properties": {
        "default": {
          "minimum": 0,
          "type": "number"
        },
        "max": {
          "type": "number"
        },
        "min": {
          "minimum": 0,
          "type": "number"
        }
      }
    },
    "sort": {
      "additionalProperties": {
        "allOf": [
          {
            "$ref": "#/definitions/parameter"
          }
        ],
        "properties": {
          "label": {
            "type": "string"
          }
        },
        "required": [
          "label"
        ]
      },
      "allOf": [
        {
          "$ref": "sort_configuration.schema.json#/definitions/sorts"
        }
      ],
      "type": "object"
    }
  },
  "title": "Blueprint Parameters",
  "type": "object"
}
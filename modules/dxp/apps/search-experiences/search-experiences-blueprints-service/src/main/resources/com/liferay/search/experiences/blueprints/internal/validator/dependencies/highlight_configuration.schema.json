{
	"$id": "highlight_configuration.schema.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"allOf": [
		{
			"$ref": "#/definitions/highlight"
		},
		{
			"properties": {
				"fields": {
					"additionalProperties": {
						"$ref": "#/definitions/highlight"
					},
					"type": "object"
				}
			},
			"required": [
				"fields"
			]
		}
	],
	"definitions": {
		"highlight": {
			"properties": {
				"fragment_offset": {
					"minimum": 0,
					"type": "number"
				},
				"fragment_size": {
					"minimum": 0,
					"type": "number"
				},
				"number_of_fragments": {
					"minimum": 0,
					"type": "number"
				},
				"post_tags": {
					"items": {
						"type": "string"
					},
					"type": "array",
					"uniqueItems": true
				},
				"pre_tags": {
					"items": {
						"type": "string"
					},
					"type": "array",
					"uniqueItems": true
				},
				"require_field_match": {
					"type": "boolean"
				},
				"type": {
					"enum": [
						"fvh",
						"plain",
						"unified"
					],
					"type": "string"
				}
			},
			"type": "object"
		}
	},
	"description": "Blueprint highlights schema",
	"title": "Blueprint Highlights",
	"type": "object"
}
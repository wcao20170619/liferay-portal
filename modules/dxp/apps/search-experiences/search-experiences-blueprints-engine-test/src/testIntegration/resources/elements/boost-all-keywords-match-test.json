								},
								{
									"label": "Phrase",
									"value": "phrase"
								},
								{
									"label": "Phrase Prefix",
									"value": "phrase_prefix"
								},
								{
									"label": "Boolean Prefix",
									"value": "bool_prefix"
								}
							]
						}
					},
					{
						"defaultValue": 10,
						"label": "Boost",
						"name": "boost",
